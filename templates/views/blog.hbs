<!-- Start of content -->
{{>page-top}}
<div class="container" id="overlays">
	<div class="row">
		<div class="col-md-9" id="blog-body">
			
			<!-- Start of blog index entries -->
			
			{{# each data.posts.results}}

			<div class="row"><!-- Start of blog post -->
				<div class="col-md-2 col-sm-2 col-xs-12">
					<div class="date-holder centered">
						<h2>{{day}}</h2>
							<hr class="date-divider">
								<h6>{{date}}</h6>
					</div><!-- End of date holder -->
				</div><!-- End of column -->

				<div class="col-md-10 col-sm-10 col-xs-12 blog-view1">

					{{#if image.url}}

						<div class="overlay-wrapper">
							<div class="img">
								<img src="{{image.url}}" alt="Blog image">
									<div class="overlay">
										<a href="{{postUrl slug}}" class="expand">
											<i class="icon" data-icon="&#xe067;"></i>
										</a>
										<a class="close-overlay hidden">x</a>
								</div><!-- End of overlay -->
							</div><!-- End of img class -->
						</div><!-- End of overlay wrapper -->

					{{/if}}

					<h4>{{{title}}}</h4>
						<em class="small branding">Posted {{#if author.name.first}}by: {{author.name.first}}{{/if}} / {{{categoryList categories prefix="Posted in "}}} </em>
						<p>{{{content.extended}}}</p>
					<a href="{{postUrl slug}}"><span class="heavy pull-right">
					Continue reading <i class="fa fa-chevron-right"></i></span></a>
				</div><!-- End of column -->
			</div><!-- End of blog entry -->
			
			{{/each}}

{{>pagination}}
		
		
		<!-- Start of sidebar -->
		
		<div class="col-md-3" id="blog-sidebar">
		
			<h4 class="no-bottom-margin no-top-margin">Categories</h4>
				<hr class="underline">
					<ul class="blog-categories">
					{{# each data.categories }}
						<li><a href="{{categoryUrl key}}">{{name}}</a></li>
						{{/each}}
					</ul><!-- End of categories -->

		<!-- Start of tag cloud -->
		<h4 class="no-bottom-margin">Tags</h4>
			<hr class="underline">
				{{# each data.categories }}
				<div class="tag-cloud"><a href="{{categoryUrl key}}" class="false list-group-item">{{name}}</a></div>
				{{/each}}
		
		</div><!-- End of column -->
	</div><!-- End of row -->
</div><!-- End of container -->